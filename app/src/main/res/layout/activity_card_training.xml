<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp"
    android:id="@+id/card_training">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_layout">


        <TextView
            android:id="@+id/textView_name"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceLargePopupMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            cardview:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            cardview:layout_constraintLeft_toLeftOf="parent"
            cardview:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            cardview:layout_constraintVertical_bias="0.119" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:drawable/ic_menu_delete"
            cardview:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            cardview:layout_constraintRight_toRightOf="parent"
            cardview:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textView_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text=""
            android:textAppearance="?attr/textAppearanceLargePopupMenu"
            android:layout_marginTop="8dp"
            cardview:layout_constraintTop_toBottomOf="@+id/textView_name"
            cardview:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            cardview:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
